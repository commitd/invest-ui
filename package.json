{
    "private": true,
    "workspaces": [
        "apps/*",
        "libs/*",
        "examples/*",
        "bundles/*",
        "plugins/*"
    ],
    "devDependencies": {
        "lerna": "^2.4.0"
    },
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "dev:app": "lerna run --stream --scope invest-app start",
        "dev:examples": "lerna run --parallel --scope example-* start",
        "dev:libs": "lerna run --parallel watch",
        "local:publish": "lerna run publish:local",
        "local:clearcache": "rm -rf $(yarn cache dir)/npm-invest-*",
        "link:libs": "lerna exec yarn link",
        "build": "lerna run build --concurrency 1",
        "build:systemjs": "mkdir -p build; lerna run build:systemjs && lerna run copy:systemjs --concurrency 1",
        "test": "lerna run test",
        "version:release": "lerna publish --force-publish=* --skip-git",
        "version:snapshot": "lerna publish --force-publish=* --skip-npm --skip-git"
    },
    "resolutions": {
        "@types/react": "16.0.41",
        "graphql": "0.13.0"
    }
}