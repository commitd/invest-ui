{
    "private": true,
    "workspaces": [
        "apps/*",
        "libs/*",
        "examples/*"
    ],
    "devDependencies": {
        "lerna": "^2.4.0"
    },
    "scripts": {
        "dev:app": "lerna run --stream --scope vessel-app start",
        "dev:examples": "lerna run --parallel --scope example-* start",
        "dev:libs": "lerna run --parallel watch",
        "publish:local": "lerna run publish:local",
        "cache:clear": "rm -rf $(yarn cache dir)/npm-vessel-*",
        "link:libs": "lerna exec yarn link",
        "build": "lerna run build",
        "build:systemjs": "mkdir -p build; lerna run build:systemjs && lerna run copy:systemjs",
        "test": "lerna run test"
    }
}