{
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*",
    "examples/*",
    "bundles/*",
    "plugins/*"
  ],
  "devDependencies": {
    "lerna": "^2.11.0",
    "license-checker": "^19.0.0",
    "rimraf": "^2.6.2"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "yarn clean:node_modules; yarn clean:build",
    "clean:node_modules": "lerna clean; yarn rimraf node_modules",
    "clean:build": "lerna exec \"rm -rf build\"",
    "dev:app": "lerna run --stream --scope invest-app start",
    "dev:libs": "lerna run --parallel watch",
    "local:publish": "lerna run publish:local",
    "local:clearcache": "rm -rf $(yarn cache dir)/npm-invest-*",
    "link:libs": "lerna exec yarn link",
    "unlink:libs": "lerna exec yarn unlink",
    "build": "lerna run build --concurrency 4",
    "build:systemjs": "mkdir -p build; lerna run build:systemjs && lerna run copy:systemjs --concurrency 4",
    "test": "lerna run test",
    "version:release": "lerna publish --force-publish=* --skip-git",
    "version:snapshot": "lerna publish --force-publish=* --skip-npm --skip-git",
    "licences": "yarn run license-checker --csv --out THIRD-PARTY-JS.csv; yarn run license-checker --summary"
  },
  "resolutions": {
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "@types/graphql": "0.13.3",
    "@types/recharts": "^1.0.24",
    "@types/node": "10.1.2",
    "@types/react-router-dom": "^4.2.7",
    "@types/react-router": "^4.0.29",
    "graphql": "0.13.0",
    "graphql-tag": "2.9.2",
    "graphql-tools": "^3",
    "ts-jest": "^23.0.1",
    "tslint": "^5.11.0",
    "typescript": "~2.9.2",
    "numeral": "2.0.6",
    "sigma": "1.2.1",
    "recharts": "^1.1.0",
    "semantic-ui-offline": "^2.3.2",
    "semantic-ui-react": "^0.82.0",
    "lodash-es": "4.17.10",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "seamless-immutable": "7.1.3",
    "apollo-cache-inmemory": "1.2.5",
    "apollo-client": "2.3.5",
    "apollo-link-http": "1.5.4",
    "graphql-tools": "3.0.1",
    "react-apollo": "^2.1.9",
    "prop-types": "15.6.2",
    "immutability-helper": "2.7.0",
    "mobx": "^5.0.3",
    "mobx-react": "^5.2.3",
    "moment": "^2.22.2",
    "victory": "30.0.0"
  }
}
