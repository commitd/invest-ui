{
  "name": "invest-plugin",
  "description": "Base library package containing plugin specific implementations",
  "version": "0.3.0-SNAPSHOT",
  "module": "src/index.ts",
  "main": "build/index.js",
  "browser": "build/index.js",
  "types": "build/index.d.ts",
  "license": "Apache-2.0",
  "dependencies": {
    "graphql-tag": "^2.5.0",
    "invest-common": "^0.3.0-SNAPSHOT",
    "invest-graphql": "^0.3.0-SNAPSHOT",
    "invest-rpc": "^0.3.0-SNAPSHOT",
    "invest-types": "^0.3.0-SNAPSHOT",
    "invest-utils": "^0.3.0-SNAPSHOT"
  },
  "peerDependencies": {
    "react": "16",
    "react-apollo": "2",
    "react-dom": "16"
  },
  "devDependencies": {
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.0.38",
    "@types/react-dom": "^16.0.2",
    "apollo-test-utils": "0",
    "enzyme": "^3.1.0",
    "jest": "^22.4.2",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "ts-jest": "^22.4.0",
    "tslint": "^5.7.0",
    "typescript": "~2.7.2"
  },
  "scripts": {
    "build": "tsc",
    "build:systemjs": "tsc -p tsconfig.systemjs.json",
    "copy:systemjs": "cp -a lib/. ../../build/.",
    "watch": "tsc -w",
    "test": "jest",
    "publish:local": "npm unpublish --registry http://localhost:4873 $npm_package_name@$npm_package_version && yarn publish --registry http://localhost:4873 --new-version $npm_package_version"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "../../node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "build/",
      "lib/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}