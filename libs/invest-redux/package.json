{
  "name": "invest-redux",
  "version": "0.3.0",
  "module": "src/index.ts",
  "main": "build/index.js",
  "browser": "build/index.js",
  "types": "build/index.d.ts",
  "license": "Apache-2.0",
  "dependencies": {
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "redux-saga": "^0.16.0",
    "reselect": "^3.0.1",
    "seamless-immutable": "^7.1.2"
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "@types/jest": "^22.1.3",
    "@types/loglevel": "^1.5.1",
    "@types/react": "^16.0.41",
    "@types/react-dom": "^16.0.1",
    "@types/react-redux": "^5.0.10",
    "@types/redux-actions": "^2.2.2",
    "@types/redux-saga": "^0.10.5",
    "@types/seamless-immutable": "^7.1.1",
    "jest": "^22.4.2",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "ts-jest": "^22.4.0",
    "tslint": "^5.7.0",
    "typescript": "~2.7.2"
  },
  "scripts": {
    "build": "tsc",
    "build:systemjs": "tsc -p tsconfig.systemjs.json",
    "copy:systemjs": "cp -a lib/. ../../build/.",
    "watch": "tsc -w",
    "test": "jest",
    "publish:local": "npm unpublish --registry http://localhost:4873 $npm_package_name@$npm_package_version && yarn publish --registry http://localhost:4873 --new-version $npm_package_version"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "../../node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "build/",
      "lib/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
